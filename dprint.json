{
  "incremental": true,
  "indentWidth": 2,
  "lineWidth": 80,
  "typescript": {
    "quoteProps": "asNeeded",
    "arrowFunction.useParentheses": "force",
    "semiColons": "asi"
  },
  "markdown": {
    "textWrap": "always",
    "emphasisKind": "asterisks"
  },
  "includes": ["**.{json,md,ts}"],
  "excludes": ["target"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.79.0.wasm",
    "https://plugins.dprint.dev/json-0.14.1.wasm",
    "https://plugins.dprint.dev/markdown-0.12.2.wasm"
  ]
}
